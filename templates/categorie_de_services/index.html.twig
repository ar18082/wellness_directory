{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

<div class="container_main">
   <div class="main_homePage">
      <div class="container_slider">
            {#
                intégrer des images et les faire défiler faire une boucle pour afficher les images
            #}
            <div class="container_slider_img">
                <img src="{{asset('img/slider-1.jpg')}}" class="slider_img" alt="...">
            </div>
        </div>
        <div class="container_categorieDeServices" id="sidebar">
            <h2>Categories de services</h2>
            <ul class="categorieDeServices_list">
                {% for service in categorieDeServices %}
                {% if service.valide %}
                    <li class='button'><a href="{{path('app_categorie_de_services', {'id': service.id})}}">{{ service.nom }}</a></li>
                {% endif %}
                {% endfor %}           
            </ul>
        </div>
        <div class="col-lg-12 text-center row">
            <!-- Description de la catégorie -->
            <h1 class="text-center col-lg-6">{{ service.nom }}</h1>
            <p class='col-lg-12'>{{ service.description }}</p>
            <!-- Pagination des prestataires dans la catégorie -->
                
        </div>
        
      
      
   </div>    
</div>

{% endblock %}
 