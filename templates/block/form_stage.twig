<div class="stageForm" id='stageForm'>  
    <div class="input-group mb-3">
        <span class="input-group-text" id="lb_nom_stg">Nom</span>
        <input type="text" id="nom_stg" name="nom_stg" class="form-control" aria-label="Sizing example input" aria-describedby="lb_nom_stg" value="{{faker.word()}}" >
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="lb_description_stg">Description</span>
        <textarea id="description_stg" name="description_stg" class="form-control" aria-label="Sizing example input" aria-describedby="lg_description_stg" >{{faker.text(200)}}</textarea>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="lb_tarif_stg">Tarif</span>
        <input type="number" id="tarif_stg" name="tarif_stg" class="form-control" aria-label="Sizing example input" aria-describedby="lb_tarif_stg" value="{{faker.randomNumber(3, false)}}">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="lb_dateIn_stg">Date de début</span>
        <input type="date" id="dateIn_stg" name="dateIn_stg" class="form-control" aria-label="Sizing example input" aria-describedby="lb_dateIn_stg" value="{{ date('+3 months')|date('Y-m-d') }}">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="lb_dateOut_stg">Date de fin</span>
        <input type="date" id="dateOut_stg" name="dateOut_stg" class="form-control" aria-label="Sizing example input" aria-describedby="lb_dateOut_stg" value="{{ date('+4 months')|date('Y-m-d') }}">
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="lb_affichageIn_stg">Date de début de l'affichage</span>
        <input type="date" id="affichageIn_stg" name="affichageIn_stg" class="form-control" aria-label="Sizing example input" aria-describedby="lb_dateOut_stg" value="{{ date('+3 days')|date('Y-m-d') }}" >
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text" id="lb_affichageOut_stg">Date de fin de l'affichage</span>
        <input type="date" id="affichageOut_stg" name="affichageOut_stg" class="form-control" aria-label="Sizing example input" aria-describedby="lb_dateOut_stg" value="{{ date('+3 months')|date('Y-m-d') }}" >
    </div>
    <div class="input-group mb-3">
        <button type="button" id="submitStageForm">Suivant</button>
    </div>

</div> 
